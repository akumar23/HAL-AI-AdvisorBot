# HAL Advisor Bot Configuration
# Copy this file to .env and fill in your values

# ============================================
# LLM Provider Selection
# ============================================
# Options: claude, openai, ollama
LLM_PROVIDER=ollama

# ============================================
# Claude (Anthropic) Configuration
# ============================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# OpenAI Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Ollama Configuration (Local LLMs)
# ============================================
# Install Ollama from: https://ollama.ai/
# Then run: ollama pull qwen2.5:7b
OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# Application Settings
# ============================================
FLASK_ENV=development
SECRET_KEY=change-this-to-a-random-secret-key

# ============================================
# Admin Settings
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# ============================================
# Database Settings
# ============================================
# Default: SQLite in project directory
DATABASE_URL=sqlite:///hal_advisor.db

# ============================================
# RAG Settings
# ============================================
# Number of documents to retrieve
RAG_TOP_K=5
# Minimum similarity score (0-1)
RAG_SIMILARITY_THRESHOLD=0.7

# ============================================
# Pipeline Settings
# ============================================
# Enable fast intent classifier (uses smaller model)
USE_FAST_CLASSIFIER=true

# Enable human handoff for low confidence queries
ENABLE_HUMAN_HANDOFF=true

# Advisor booking URL for escalations
ADVISOR_BOOKING_URL=https://sjsu.campus.eab.com/student/appointments/new

# ============================================
# Recommended Models by Provider
# ============================================
#
# MAIN MODELS (for RAG response generation):
# Claude:
#   - Best: claude-sonnet-4-20250514 (high accuracy)
#   - Fast: claude-3-5-haiku-20241022 (lower cost)
#
# OpenAI:
#   - Best: gpt-4o (high accuracy)
#   - Fast: gpt-4o-mini (lower cost)
#
# Ollama (Local):
#   - 8GB RAM: qwen2.5:7b or llama3.1:8b
#   - 16GB RAM: qwen2.5:14b or phi-4:14b
#
# CLASSIFIER MODELS (for intent classification - fast & cheap):
# Claude: claude-3-5-haiku-20241022
# OpenAI: gpt-4o-mini (15x cheaper than gpt-4o)
# Ollama: phi3:3.8b (runs on 6GB RAM)
#
# EMBEDDING MODELS:
# Claude/OpenAI: text-embedding-3-small
# Ollama: nomic-embed-text
